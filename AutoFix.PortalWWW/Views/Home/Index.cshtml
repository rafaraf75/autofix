@model AutoFix.PortalWWW.Models.ViewModels.HomeVM

@{
    ViewData["Title"] = "Strona główna";
}

<!-- HERO SECTION -->
<section class="bg-primary text-white text-center py-5 mb-4">
    <div class="container">
        <h1 class="display-4 fw-bold">Witamy w AutoFix</h1>
        <p class="lead">Zadbamy o Twój samochód jak nikt inny.</p>
        <a href="/Rezerwacja/Create" class="btn btn-light btn-lg mt-3">Umów wizytę</a>
    </div>
</section>

<!-- PROMOCJE -->
<section class="container mb-5">
    <h2 class="text-center mb-4">Aktualne promocje</h2>
    <div class="row g-4">
        @foreach (var promocja in Model.Promocje)
        {
            <div class="col-md-4">
                <div class="alert shadow-sm" style="background-color: #e0f0ff;">
                    <i class="bi @promocja.Ikona me-2"></i>
                    <strong>@promocja.Tytul</strong><br />
                    @promocja.Tresc
                </div>
            </div>
        }
    </div>
</section>

<!-- USŁUGI -->
<section class="container mb-5">
    <h2 class="text-center mb-4">Nasze usługi</h2>
    <div class="row g-4">
        @foreach (var usluga in Model.Uslugi)
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi @usluga.Ikona me-2"></i>@usluga.Tytul
                        </h5>
                        <p class="card-text">@usluga.Opis</p>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- CTA -->
<section class="text-center mb-5">
    <h4 class="mb-3">Nie czekaj – zarezerwuj termin już teraz!</h4>
    <a href="/Rezerwacja/Create" class="btn btn-primary btn-lg">Umów wizytę</a>
</section>
