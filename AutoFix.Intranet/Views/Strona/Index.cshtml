@model IEnumerable<AutoFix.Data.Data.CMS.Strona>

@{
    ViewData["Title"] = "Index";
}

<h1>Treści</h1>

<div class="d-flex justify-content-start mb-3">
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-circle me-1"></i> Dodaj nowy
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozycja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdStrony" class="btn btn-sm btn-outline-warning me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdStrony" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdStrony" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>

            </td>
        </tr>
}
    </tbody>
</table>
