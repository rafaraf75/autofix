@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AutoFix Intranet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            height: 100%;
        }

        .sidebar {
            width: 220px;
            background-color: #343a40;
            padding-top: 1rem;
            flex-shrink: 0;
            overflow-y: auto;
        }

            .sidebar a {
                color: #ccc;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: #fff;
                }

            .sidebar h5 {
                color: #fff;
                padding: 0 20px 10px;
                border-bottom: 1px solid #444;
                margin-bottom: 1rem;
            }

        .content-area {
            flex-grow: 1;
            flex-direction: column;
            display: flex;
        }

        .navbar-top {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex: 1;
            padding: 2rem;
            padding-bottom: 120px;
            overflow-y: auto;
            background-color: #f8f9fa;
        }

        footer {
            background-color: #212529;
            color: #fff;
            text-align: center;
            padding: 0.75rem;
            position: fixed;
            bottom: 0;
            left: 220px;
            right: 0;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <h5>AutoFix Intranet</h5>

            <a asp-controller="Home" asp-action="Index" class="@(currentController == "Home" ? "active" : "")">
                <i class="bi bi-speedometer2 me-2"></i>Dashboard
            </a>
            <a asp-controller="Klient" asp-action="Index" class="@(currentController == "Klient" ? "active" : "")">
                <i class="bi bi-people-fill me-2"></i>Klienci
            </a>
            <a asp-controller="Mechanik" asp-action="Index" class="@(currentController == "Mechanik" ? "active" : "")">
                <i class="bi bi-tools me-2"></i>Mechanicy
            </a>
            <a asp-controller="Naprawa" asp-action="Index" class="@(currentController == "Naprawa" ? "active" : "")">
                <i class="bi bi-wrench me-2"></i>Naprawy
            </a>
            <a asp-controller="Pojazd" asp-action="Index" class="@(currentController == "Pojazd" ? "active" : "")">
                <i class="bi bi-car-front-fill me-2"></i>Pojazdy
            </a>
            <a asp-controller="Rezerwacja" asp-action="Index" class="@(currentController == "Rezerwacja" ? "active" : "")">
                <i class="bi bi-calendar-event me-2"></i>Rezerwacje
            </a>
            <a asp-controller="HistoriaNapraw" asp-action="Index" class="@(currentController == "HistoriaNapraw" ? "active" : "")">
                <i class="bi bi-clock-history me-2"></i>Historia napraw
            </a>
            <a asp-controller="AutoZastepcze" asp-action="Index" class="@(currentController == "AutoZastepcze" ? "active" : "")">
                <i class="bi bi-car-front-fill me-2"></i>Auta zastępcze
            </a>
            <a asp-controller="Aktualnosc" asp-action="Index" class="@(currentController == "Aktualnosc" ? "active" : "")">
                <i class="bi bi-megaphone-fill me-2"></i>Aktualności
            </a>
            <a asp-controller="Strona" asp-action="Index" class="@(currentController == "Strona" ? "active" : "")">
                <i class="bi bi-file-earmark-text me-2"></i>Treści (CMS)
            </a>
            <a asp-controller="Promocja" asp-action="Index" class="@(currentController == "Promocja" ? "active" : "")">
                <i class="bi bi-tag-fill me-2"></i>Promocje
            </a>
            <a asp-controller="Usluga" asp-action="Index" class="@(currentController == "Usluga" ? "active" : "")">
                <i class="bi bi-gear-wide-connected me-2"></i>Usługi
            </a>

        </nav>


        <!-- CONTENT -->
        <div class="content-area">
            <!-- TOPBAR -->
            <nav class="navbar navbar-light bg-light border-bottom px-4 navbar-top">
                <div class="container-fluid d-flex justify-content-end align-items-center">
                    <span class="me-3 text-muted"><i class="bi bi-person-circle"></i>  Zalogowany jako: <strong>admin@autofix.pl</strong></span>
                    <a class="btn btn-outline-secondary btn-sm" href="#">Wyloguj</a>
                </div>
            </nav>

            <!-- MAIN -->
            <main class="main-content">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer>
                &copy; 2025 AutoFix Intranet | Panel zarządzania
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
