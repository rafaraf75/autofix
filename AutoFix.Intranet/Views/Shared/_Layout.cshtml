@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - AutoFix Intranet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .wrapper {
            display: flex;
            height: 100vh;
            overflow: hidden;
        }

        .sidebar {
            width: 220px;
            background-color: #343a40;
            padding-top: 1rem;
            flex-shrink: 0;
            overflow-y: auto;
        }

            .sidebar a {
                color: #ccc;
                padding: 12px 20px;
                display: block;
                text-decoration: none;
            }

                .sidebar a:hover,
                .sidebar a.active {
                    background-color: #495057;
                    color: #fff;
                }

            .sidebar h5 {
                color: #fff;
                padding: 0 20px 10px;
                border-bottom: 1px solid #444;
                margin-bottom: 1rem;
            }

        .content-area {
            flex-grow: 1;
            display: flex;
            flex-direction: column;
        }

        .navbar-top {
            position: sticky;
            top: 0;
            z-index: 1030;
        }

        .main-content {
            flex-grow: 1;
            padding: 2rem;
            overflow-y: auto;
            background-color: #f8f9fa;
        }

        footer {
            background-color: #212529;
            color: #fff;
            text-align: center;
            padding: 0.75rem;
        }
    </style>
</head>
<body>
    <div class="wrapper">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <h5>AutoFix Intranet</h5>
            <a asp-controller="Home" asp-action="Index" class="active">🏠 Dashboard</a>
            <a asp-controller="Klient" asp-action="Index">👤 Klienci</a>
            <a asp-controller="Mechanik" asp-action="Index">🧑‍🔧 Mechanicy</a>
            <a asp-controller="Naprawa" asp-action="Index">🔧 Naprawy</a>
            <a asp-controller="Pojazd" asp-action="Index">🚗 Pojazdy</a>
            <a asp-controller="Rezerwacja" asp-action="Index">📅 Rezerwacje</a>
            <a asp-controller="HistoriaNaprawy" asp-action="Index">🕒 Historia napraw</a>
            <a asp-controller="AutoZastepcze" asp-action="Index">🚙 Auta zastępcze</a>
            <a asp-controller="Aktualnosc" asp-action="Index">📰 Aktualności</a>
            <a asp-controller="Strona" asp-action="Index">📄 Treści (CMS)</a>
        </nav>

        <!-- CONTENT -->
        <div class="content-area">
            <!-- TOPBAR -->
            <nav class="navbar navbar-light bg-light border-bottom px-4 navbar-top">
                <div class="container-fluid d-flex justify-content-end align-items-center">
                    <span class="me-3 text-muted">👤 Zalogowany jako: <strong>admin@autofix.pl</strong></span>
                    <a class="btn btn-outline-secondary btn-sm" href="#">Wyloguj</a>
                </div>
            </nav>

            <!-- MAIN -->
            <main class="main-content">
                @RenderBody()
            </main>

            <!-- FOOTER -->
            <footer>
                &copy; 2025 AutoFix Intranet | Panel zarządzania
            </footer>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
