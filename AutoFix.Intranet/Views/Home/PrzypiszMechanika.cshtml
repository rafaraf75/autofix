@{
    ViewData["Title"] = "Przypisz mechanika";
    var idRezerwacji = ViewBag.IdRezerwacji;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <i class="bi bi-wrench-adjustable-circle me-2"></i>
                    Przypisz mechanika do rezerwacji
                </div>
                <div class="card-body">
                    <form asp-action="PrzypiszMechanika" method="post">
                        <input type="hidden" name="id" value="@idRezerwacji" />

                        <div class="mb-3">
                            <label for="idMechanika" class="form-label">Wybierz mechanika:</label>
                            <select name="idMechanika" id="idMechanika" class="form-select" required>
                                <option value="">-- wybierz mechanika --</option>
                                @foreach (var m in (ViewBag.Mechanicy as List<SelectListItem> ?? new List<SelectListItem>()))
                                {
                                    <option value="@m.Value">@m.Text</option>
                                }
                            </select>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-primary w-50 me-2">
                                <i class="bi bi-check-circle me-1"></i> Przypisz
                            </button>
                            <a asp-action="Index" class="btn btn-secondary w-50">
                                <i class="bi bi-x-circle me-1"></i> Anuluj
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
