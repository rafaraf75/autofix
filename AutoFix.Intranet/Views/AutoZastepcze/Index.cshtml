@model IEnumerable<AutoFix.Data.Data.Garaz.AutoZastepcze>

@{
    ViewData["Title"] = "Index";
}

<h1>Auta zastępcze</h1>

<div class="d-flex justify-content-start mb-3">
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-circle me-1"></i> Dodaj nowy
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataOd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataDo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Koszt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Naprawa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataOd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Koszt)
            </td>
            <td>
                @(item.OpisNaprawy ?? item.Naprawa?.Opis ?? "—")
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAutoZastepczego" class="btn btn-sm btn-outline-warning me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdAutoZastepczego" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdAutoZastepczego" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>

            </td>
        </tr>
}
    </tbody>
</table>
