@model AutoFix.Data.Data.CMS.Usluga

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj</h1>

<h4>Usluga</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Tytul" class="control-label"></label>
                <input asp-for="Tytul" class="form-control" />
                <span asp-validation-for="Tytul" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Opis" class="control-label"></label>
                <input asp-for="Opis" class="form-control" />
                <span asp-validation-for="Opis" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ikona" class="control-label"></label>
                <input asp-for="Ikona" class="form-control" />
                <span asp-validation-for="Ikona" class="text-danger"></span>
            </div>
            <div class="form-group d-flex mt-3 gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Zapisz
                </button>

                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle"></i> Powrót
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
