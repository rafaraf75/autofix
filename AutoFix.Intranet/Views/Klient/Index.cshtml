@model IEnumerable<AutoFix.Data.Data.Garaz.Klient>

@{
    ViewData["Title"] = "Index";
}

<h1>Klienci</h1>

<div class="d-flex justify-content-start mb-3">
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-circle me-1"></i> Dodaj nowy
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Imie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nazwisko)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Imie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nazwisko)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdKlienta" class="btn btn-sm btn-outline-warning me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdKlienta" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdKlienta" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>

            </td>
        </tr>
}
    </tbody>
</table>
