@model IEnumerable<AutoFix.Data.Data.Garaz.Naprawa>

@{
    ViewData["Title"] = "Index";
}

<h1>Naprawy</h1>

<div class="d-flex justify-content-start mb-3">
    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
        <i class="bi bi-plus-circle me-1"></i> Dodaj nowy
    </a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DataPrzyjecia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Opis)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AutoZastepcze)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pojazd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mechanik)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataPrzyjecia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Opis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AutoZastepcze)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pojazd.Marka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mechanik.Imie)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IdNaprawy" class="btn btn-sm btn-outline-warning me-1">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdNaprawy" class="btn btn-sm btn-outline-info me-1">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdNaprawy" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i>
                    </a>
                    <form asp-action="Zakoncz" asp-route-id="@item.IdNaprawy" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-outline-success">
                            <i class="bi bi-check-circle"></i>
                        </button>
                    </form>
            </td>
        </tr>
}
    </tbody>
</table>
