@model AutoFix.Data.Data.Garaz.Naprawa

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Zlecenie naprawy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  
</head>
<body class="p-5">

    <div class="container">
        <div class="card shadow">
            <div class="card-body">
                <h4 class="card-title mb-4">Zlecenie naprawy</h4>

                <p><strong>Data przyjęcia:</strong> @Model.DataPrzyjecia.ToString("dd.MM.yyyy HH:mm")</p>
                <p><strong>Pojazd:</strong> @Model.Pojazd?.Marka @Model.Pojazd?.Model (@Model.Pojazd?.NrRejestracyjny)</p>
                <p><strong>Mechanik:</strong> @Model.Mechanik?.Imie @Model.Mechanik?.Nazwisko</p>
                <p><strong>Opis naprawy:</strong> @Model.Opis</p>
                <p><strong>Status:</strong> @Model.Status</p>

                <hr />
                <p class="text-muted">Zlecenie wygenerowano automatycznie przez system AutoFix.</p>

                <button onclick="window.print()" class="btn btn-outline-secondary mt-3 no-print">
                    <i class="bi bi-printer"></i> Drukuj
                </button>
            </div>
        </div>
    </div>
    <script>
        window.onload = () => {
            window.print();
            setTimeout(() => {
                window.location.href = '/Home';
            }, 1000);
        };
    </script>

</body>
</html>
