}

<h1>Szczegóły</h1>

<div>
    <h4>Pojazd</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Marka)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Marka)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Model)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Model)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Rok)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Rok)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NrRejestracyjny)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NrRejestracyjny)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Silnik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Silnik)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Klient)
        </dt>
