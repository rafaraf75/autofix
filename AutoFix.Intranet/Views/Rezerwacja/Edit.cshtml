@model AutoFix.Data.Data.Garaz.Rezerwacja

@{
    ViewData["Title"] = "Edit";
}

<h1>Edytuj</h1>

<h4>Rezerwacja</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdRezerwacji" />
            <div class="form-group">
                <label asp-for="DataRezerwacji" class="control-label"></label>
                <input asp-for="DataRezerwacji" class="form-control" />
                <span asp-validation-for="DataRezerwacji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Usluga" class="control-label"></label>
                <input asp-for="Usluga" class="form-control" />
                <span asp-validation-for="Usluga" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uwagi" class="control-label"></label>
                <input asp-for="Uwagi" class="form-control" />
                <span asp-validation-for="Uwagi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdKlienta" class="control-label"></label>
                <select asp-for="IdKlienta" class="form-control" asp-items="ViewBag.IdKlienta"></select>
                <span asp-validation-for="IdKlienta" class="text-danger"></span>
            </div>
            <div class="form-group d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Zapisz
                </button>

                <a asp-action="Index" class="btn btn-outline-primary">
                    <i class="bi bi-arrow-left-circle"></i> Powrót
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
