@model AutoFix.Data.Data.Garaz.Rezerwacja

<h2>Zarządzaj rezerwacją</h2>

<form asp-action="Zarzadzaj" method="post" class="container mt-4" style="max-width: 800px;">
    <input type="hidden" asp-for="IdRezerwacji" />

    <h2 class="mb-4">Zarządzaj rezerwacją</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="DataRezerwacji" class="form-label">Data rezerwacji</label>
            <input asp-for="DataRezerwacji" class="form-control" type="datetime-local" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Mechanik</label>
            <select asp-for="IdMechanika" class="form-select" asp-items="ViewBag.Mechanicy">
                <option value="">-- Wybierz mechanika --</option>
            </select>
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="Usluga" class="form-label">Usługa</label>
        <input asp-for="Usluga" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Uwagi" class="form-label">Uwagi</label>
        <textarea asp-for="Uwagi" class="form-control" rows="3"></textarea>
    </div>

    <div class="d-flex justify-content-start">
        <button type="submit" class="btn btn-primary">Przekaż do naprawy</button>
        <a asp-action="RezerwacjaDashboard" class="btn btn-secondary ms-2">Anuluj</a>
    </div>
</form>

